@model List<MovieOnline.Models.MovieModels.Movie>

@{
    ViewData["Title"] = "Index";
}

<h3 class="bg-info text-md-left text-white">Movie List</h3>
<br />
<div class="row">
    <div class="col">
        <table class="table table-active table-bordered">
            <thead>
                <tr>
                    <th>Movie Title</th>
                    <th>Genre</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if(Model.Count > 0)
            {
                foreach(var movie in Model)
                {
                    <tr>
                        <td>@movie.Title</td> 
                        <td i-movie="@movie.Id">@movie.Id</td>
                        <td>
                            <a asp-action="AddGenre" asp-route-id="@movie.Id" class="btn btn-primary">Add Movie Genre</a>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>

</div>