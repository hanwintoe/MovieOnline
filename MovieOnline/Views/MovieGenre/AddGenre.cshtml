@model MovieOnline.Models.MovieModels.MovieDto

@{
    ViewData["Title"] = "AddGenre";
}

<a asp-action="Index" class="btn btn-primary">Back</a>
<br />
<br />
<h1>@(Model.Id > 0? "Edit Gernre" : "Add Gerner" )</h1>
<br />
<br />

<div class="container-fluid">
    <form method="post" asp-action="AddGenre" asp-controller="MovieGenre">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            @Html.HiddenFor(model => model.Id)
            @Html.LabelFor(model => model.Title, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control", placeholder = "Enter Name" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.GenreIds, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-6">
                @Html.ListBoxFor(model => model.GenreIds, new MultiSelectList(Model.DrpGenres, "Value", "Text"), new { @class = "form-control", multiple = "multiple", id = "Subjects_dropdown" })
            </div>
        </div>

        <div class="form-group row">
            <input type="submit" name="name" value="@(Model.Id>0?"Update": "Add")" class="btn btn-success" />
        </div>

    </form>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            $('#Subjects_dropdown').multiselect();
        });
    </script>
}